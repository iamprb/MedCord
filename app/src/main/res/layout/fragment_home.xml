<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">


   <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintHeight_percent="0.3"
           android:id="@+id/hsv_container"
           android:layout_margin="10dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
   />

    <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_b1"
            android:text="Button 1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_b2"
            app:layout_constraintTop_toBottomOf="@+id/hsv_container"
    />
    <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_b2"
            android:text="Button 2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_b1"
            app:layout_constraintTop_toBottomOf="@+id/hsv_container"
    />
    <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_b3"
            android:text="Button 3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_b4"
            app:layout_constraintTop_toBottomOf="@+id/btn_b1"
    />
    <android.support.v7.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_b4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="Button 4"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_b3"
            app:layout_constraintTop_toBottomOf="@+id/btn_b2"
    />
</android.support.constraint.ConstraintLayout>